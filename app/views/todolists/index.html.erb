<div class="container">
  <section class="bs-docs-section">
    <%# 入力フォーム %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2 text-right flower-box">
        <%= form_with model: Todolist.new do |f| %>
          <fieldset>
            <div class="form-inline col-lg-12 text-left">
              <div class="form-group">
                  <%= f.datetime_select :deadline, {:use_month_numbers => true, :date_separator => '/'}, :class => 'form-control', :id => :deadline, :required => true %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-12">
                <%= f.text_area :task, :class => 'form-control', :id => :task, :placeholder => 'やることを入力してください', :required => true %>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-12">
                <%= button_tag '<i class="glyphicon glyphicon-pencil"></i>りすとに登録'.html_safe, class: 'dashed-button' %>
              </div>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>

    <%# やることりすと一覧 %>
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="page-header">
          <h1 class="text-danger">やることりすと</h1>
        </div>

        <% @todolists.each do |todo| %>
          <div class="bs-component col-xs-8 col-xs-offset-2">
            <div class="card text-white bg-success mb-3">
              <div class="card-header"><%= todo.deadline %></div>
              <div class="card-body">
                <p class="card-text"><%= todo.task %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </section>
</div>
