<div class="container">
  <section class="bs-docs-section">
    <%# 入力フォーム %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2 text-right flower-box">
        <form action="create" method="POST" accept-charset="utf-8" class="form-horizontal" id="EDIT">
          <fieldset>
            <div class="form-group">
              <div class="col-lg-6">
                <div class="input-group date" id="datetimepicker1">
                  <input type="text" name="f_regdate" id="f_regdate" value="" class="form-control" onclick="btnclick('f_regdate_btn');" placeholder="いつまでにやるものですか？" required>
                  <span class="input-group-addon" id="f_regdate_btn">
                    <span class="glyphicon glyphicon-calendar"></span>
                  </span>
                </div>
                <span class="help-block"></span>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-12">
                <textarea type="textArea" name="f_body" id="f_body" value="" class="form-control" rows="2" placeholder="やることを入力してください" required></textarea>
                <span class="help-block"></span>
              </div>
            </div>

            <div class="form-group">
              <div class="col-lg-12">
                <button type="submit" class="dashed-button" name="action" value="submit"><span class="glyphicon glyphicon-pencil"></span>りすとに登録</button>
              </div>
            </div>
          </fieldset>
        </form>
      </div>
    </div>

    <%# やることりすと一覧 %>
    <div class="row">
      <div class="col-lg-12 text-center">
        <div class="page-header">
          <h1 class="text-danger">やることりすと</h1>
        </div>
      </div>
    </div>
  </section>
</div>
